---
import {
    RiCaravanFill,
    RiCheckboxCircleFill,
    RiSecurePaymentFill,
    RiShieldCheckFill,
} from "react-icons/ri";
import Layout from "../layouts/Layout.astro";
import DetailsCarPay from "../components/DetailsCarPay.jsx";
import OrderSummaryPay from "../components/OrderSummaryPay.jsx";
import HeaderSummary from "../components/HeaderSummary.astro";
import Formulario from "../components/pagos/Formulario";
---

<Layout>
    <main
        class="flex-grow py-35 md:py-28 px-4 sm:px-6 lg:px-8 max-w-7xl mx-auto w-full"
    >
        <!-- Progress Steps -->
        <HeaderSummary step='2'/>
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-12">
            <!-- Left Column: Forms -->
            <div class="lg:col-span-7 space-y-8">
                <!-- Section: Contact Info -->

                <!-- Section: Shipping Address -->
                <Formulario client:only="react"/>
                <!-- Section: Shipping Method -->

            </div>
            <!-- Right Column: Order Summary (Sticky) -->
            <div class="lg:col-span-5">
                <div class="sticky top-24 space-y-4">
                    <!-- Summary Card -->
                    <div
                        class="bg-surface-dark rounded-xl p-6 md:p-8 shadow-lg border border-slate-800"
                    >
                        <h3
                            class="text-lg font-bold text-white mb-6 border-b border-slate-700 pb-4"
                        >
                            Resumen del Pedido
                        </h3>
                        <!-- Product Item -->
                        <DetailsCarPay client:only="react"/>
                        <!-- Virtual Try-On Snapshot (Contextual Feature) -->
                        <div
                            class="mb-6 bg-background-dark rounded-lg p-3 border border-slate-700 flex items-center gap-3"
                        >
                            <div
                                class="w-12 h-12 rounded-full overflow-hidden border-2 border-sebg-secondary"
                            >
                                <img
                                    alt="User face with virtual glasses overlay"
                                    class="w-full h-full object-cover"
                                    data-alt="Virtual try-on simulation result"
                                    src="https://lh3.googleusercontent.com/aida-public/AB6AXuBH7ILw2CKSB5ugQdRb9eg8GBBKPmUNegQ02xCWJsApegxioAmDTuSLEVqbrzwjvazVkWEBQaSEWQw_b8cGkCcE1DxlQMxPNbinoJ6aNG70bLFnXmubbBiGEHaH9ogzGco-XLmXwghplD7Iunobar43q8-TSegqdBmTlodB7ZmKG-IXgvKmRqERdSJZRzHG37d6twcJXA8h-79rmuQfc4HYanJtKb9lK3UzvNgV6pQ19a9GNr1CDCsNfSwslkdCOBM7RE0J5gGNDR1U"
                                />
                            </div>
                            <div>
                                <p class="text-xs font-semibold text-secondary">
                                    Prueba Virtual Confirmada
                                </p>
                                <p class="text-[10px] text-slate-500">
                                    Este modelo se ajusta a tus medidas.
                                </p>
                            </div>
                           <RiCheckboxCircleFill className="text-secondary ml-auto text-lg"/>
                        </div>
                        <OrderSummaryPay client:only="react"/>
                    </div>
                    <!-- Trust Badges -->
                    <div
                        class="flex justify-center gap-4 text-slate-400 opacity-60"
                    >
                        <RiSecurePaymentFill />
                        <RiShieldCheckFill />
                        <RiCaravanFill />
                    </div>
                </div>
            </div>
        </div>
    </main>
</Layout>
