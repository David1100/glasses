---
import {
    RiAccountPinBoxFill,
    RiArrowRightLine,
    RiBankCardFill,
    RiCaravanFill,
    RiCheckboxCircleFill,
    RiCheckLine,
    RiFileTextLine,
    RiMapPinLine,
    RiSecurePaymentFill,
    RiShieldCheckFill,
} from "react-icons/ri";
import Layout from "../layouts/Layout.astro";
import DetailsCarPay from "../components/DetailsCarPay.jsx";
import OrderSummaryPay from "../components/OrderSummaryPay.jsx";
---

<Layout>
    <main
        class="flex-grow py-35 md:py-28 px-4 sm:px-6 lg:px-8 max-w-7xl mx-auto w-full"
    >
        <!-- Progress Steps -->
        <div class="mb-10 max-w-3xl mx-auto">
            <div class="relative flex justify-between items-center">
                <!-- Line background -->
                <div
                    class="absolute top-1/2 left-0 w-full h-1 bg-slate-800 -translate-y-1/2 rounded-full -z-10"
                >
                </div>
                <!-- Active Line Progress -->
                <div
                    class="absolute top-1/2 left-0 w-1/2 h-1 bg-secondary -translate-y-1/2 rounded-full -z-10 shadow-[0_0_10px_rgba(19,200,236,0.5)]"
                >
                </div>
                <!-- Step 1: Active/Completed -->
                <div class="flex flex-col items-center gap-2">
                    <div
                        class="w-10 h-10 rounded-full bg-secondary flex items-center justify-center text-white shadow-lg shadow-sebg-secondary/30 ring-4 ring-background-dark"
                    >
                        <RiCheckLine />
                    </div>
                    <span
                        class="text-xs font-semibold text-secondary uppercase tracking-wider"
                        >Carrito</span
                    >
                </div>
                <!-- Step 2: Current -->
                <div class="flex flex-col items-center gap-2">
                    <div
                        class="w-10 h-10 rounded-full bg-secondary flex items-center justify-center text-white shadow-lg shadow-sebg-secondary/30 ring-4 ring-background-dark transition-all scale-110"
                    >
                        <RiCaravanFill />
                    </div>
                    <span
                        class="text-xs font-semibold text-secondary uppercase tracking-wider"
                        >Envío</span
                    >
                </div>
                <!-- Step 3: Pending -->
                <div class="flex flex-col items-center gap-2">
                    <div
                        class="w-10 h-10 rounded-full bg-surface-dark border-2 border-slate-700 flex items-center justify-center text-slate-400 ring-4 ring-background-dark"
                    >
                        <RiBankCardFill />
                    </div>
                    <span
                        class="text-xs font-semibold text-slate-500 uppercase tracking-wider"
                        >Pago</span
                    >
                </div>
                <!-- Step 4: Pending -->
                <div class="flex flex-col items-center gap-2">
                    <div
                        class="w-10 h-10 rounded-full bg-surface-dark border-2 border-slate-700 flex items-center justify-center text-slate-400 ring-4 ring-background-dark"
                    >
                        <RiFileTextLine />
                    </div>
                    <span
                        class="text-xs font-semibold text-slate-500 uppercase tracking-wider"
                        >Factura</span
                    >
                </div>
            </div>
        </div>
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-12">
            <!-- Left Column: Forms -->
            <div class="lg:col-span-7 space-y-8">
                <!-- Section: Contact Info -->
                <div
                    class="bg-surface-dark rounded-xl p-6 md:p-8 shadow-sm border border-slate-800"
                >
                    <div class="flex justify-between items-center mb-6">
                        <h2
                            class="text-xl font-bold text-white flex items-center gap-2"
                        >
                            <RiAccountPinBoxFill className="text-secondary" />
                            Información de Contacto
                        </h2>
                        <!-- <span class="text-sm text-slate-500"
                            >¿Ya tienes cuenta? <a
                                class="text-secondary hover:underline"
                                href="#">Iniciar sesión</a
                            ></span
                        > -->
                    </div>
                    <div class="space-y-4">
                        <label class="block">
                            <span
                                class="text-sm font-medium text-slate-300 mb-1 block"
                                >Correo Electrónico</span
                            >
                            <input
                                class="w-full rounded-lg bg-background-dark border-slate-700 text-white focus:ring-2 focus:ring-sebg-secondary focus:border-transparent transition-all px-4 py-2"
                                placeholder="ejemplo@correo.com"
                                type="email"
                            />
                        </label>
                        <!-- <div class="flex items-center gap-2">
                            <input
                                class="rounded bg-background-dark border-slate-600 text-secondary focus:ring-sebg-secondary"
                                id="newsletter"
                                type="checkbox"
                            />
                            <label
                                class="text-sm text-slate-600 dark:text-slate-400"
                                for="newsletter"
                                >Enviarme novedades sobre nuevos modelos y
                                ofertas.</label
                            >
                        </div> -->
                    </div>
                </div>
                <!-- Section: Shipping Address -->
                <div
                    class="bg-surface-dark rounded-xl p-6 md:p-8 shadow-sm border border-slate-800"
                >
                    <h2
                        class="text-xl font-bold text-white mb-6 flex items-center gap-2"
                    >
                        <RiMapPinLine className="text-secondary"/>
                        Dirección de Envío
                    </h2>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div class="space-y-1">
                            <label class="text-sm font-medium text-slate-300"
                                >Nombre</label
                            >
                            <input
                                class="w-full rounded-lg bg-background-dark border-slate-700 text-white focus:ring-2 focus:ring-sebg-secondary focus:border-transparent px-4 py-2"
                                placeholder="Juan"
                                type="text"
                            />
                        </div>
                        <div class="space-y-1">
                            <label class="text-sm font-medium text-slate-300"
                                >Apellidos</label
                            >
                            <input
                                class="w-full rounded-lg bg-background-dark border-slate-700 text-white focus:ring-2 focus:ring-sebg-secondary focus:border-transparent px-4 py-2"
                                placeholder="Pérez"
                                type="text"
                            />
                        </div>
                        <div class="col-span-1 md:col-span-2 space-y-1">
                            <label class="text-sm font-medium text-slate-300"
                                >Dirección</label
                            >
                            <input
                                class="w-full rounded-lg bg-background-dark border-slate-700 text-white focus:ring-2 focus:ring-sebg-secondary focus:border-transparent px-4 py-2"
                                placeholder="Calle Principal 123, Depto 4B"
                                type="text"
                            />
                        </div>
                        <div class="space-y-1">
                            <label class="text-sm font-medium text-slate-300"
                                >Ciudad</label
                            >
                            <input
                                class="w-full rounded-lg bg-background-dark border-slate-700 text-white focus:ring-2 focus:ring-sebg-secondary focus:border-transparent px-4 py-2"
                                type="text"
                            />
                        </div>
                        <div class="space-y-1">
                            <label class="text-sm font-medium text-slate-300"
                                >Código Postal</label
                            >
                            <input
                                class="w-full rounded-lg bg-background-dark border-slate-700 text-white focus:ring-2 focus:ring-sebg-secondary focus:border-transparent px-4 py-2"
                                type="text"
                            />
                        </div>
                        <div class="space-y-1">
                            <label class="text-sm font-medium text-slate-300"
                                >País</label
                            >
                            <select
                                class="w-full rounded-lg bg-background-dark border-slate-700 text-white focus:ring-2 focus:ring-sebg-secondary focus:border-transparent px-4 py-2"
                            >
                                <option>España</option>
                                <option>México</option>
                                <option>Argentina</option>
                                <option>Colombia</option>
                            </select>
                        </div>
                        <div class="space-y-1">
                            <label class="text-sm font-medium text-slate-300"
                                >Teléfono</label
                            >
                            <input
                                class="w-full rounded-lg bg-background-dark border-slate-700 text-white focus:ring-2 focus:ring-sebg-secondary focus:border-transparent px-4 py-2"
                                type="tel"
                            />
                        </div>
                    </div>
                </div>
                <!-- Section: Shipping Method -->
                <div
                    class="bg-surface-dark rounded-xl p-6 md:p-8 shadow-sm border border-slate-800"
                >
                    <h2
                        class="text-xl font-bold text-white mb-6 flex items-center gap-2"
                    >
                        <RiCaravanFill className="text-secondary"/>
                        Método de Envío
                    </h2>
                    <div class="space-y-3">
                        <label
                            class="relative flex items-center p-4 rounded-lg border border-sebg-secondary bg-secondary/5 dark:bg-secondary/10 cursor-pointer transition-colors"
                        >
                            <input
                                checked=""
                                class="h-4 w-4 text-secondary border-slate-600 focus:ring-sebg-secondary"
                                name="shipping"
                                type="radio"
                            />
                            <div class="ml-4 flex-grow">
                                <span
                                    class="block text-sm font-semibold text-white"
                                    >Envío Estándar</span
                                >
                                <span class="block text-xs text-slate-500"
                                    >Entrega en 3-5 días hábiles</span
                                >
                            </div>
                            <span class="text-sm font-bold text-white"
                                >Gratis</span
                            >
                        </label>
                        <label
                            class="relative flex items-center p-4 rounded-lg border border-slate-700 hover:hover:border-slate-600 cursor-pointer transition-colors"
                        >
                            <input
                                class="h-4 w-4 text-secondary border-slate-600 focus:ring-sebg-secondary"
                                name="shipping"
                                type="radio"
                            />
                            <div class="ml-4 flex-grow">
                                <span
                                    class="block text-sm font-semibold text-white"
                                    >Envío Express</span
                                >
                                <span class="block text-xs text-slate-500"
                                    >Entrega en 24-48 horas</span
                                >
                            </div>
                            <span class="text-sm font-bold text-white"
                                >€9.90</span
                            >
                        </label>
                    </div>
                </div>
                <div class="flex justify-end pt-4">
                    <button
                        class="bg-secondary hover:bg-secondary/90 text-white font-semibold py-3 px-8 rounded-lg shadow-lg shadow-sebg-secondary/25 transition-all transform hover:scale-[1.02] flex items-center gap-2"
                    >
                        Continuar al Pago
                        <RiArrowRightLine />
                    </button>
                </div>
            </div>
            <!-- Right Column: Order Summary (Sticky) -->
            <div class="lg:col-span-5">
                <div class="sticky top-24 space-y-6">
                    <!-- Summary Card -->
                    <div
                        class="bg-surface-dark rounded-xl p-6 md:p-8 shadow-lg border border-slate-800"
                    >
                        <h3
                            class="text-lg font-bold text-white mb-6 border-b border-slate-700 pb-4"
                        >
                            Resumen del Pedido
                        </h3>
                        <!-- Product Item -->
                        <DetailsCarPay client:only="react"/>
                        <!-- Virtual Try-On Snapshot (Contextual Feature) -->
                        <div
                            class="mb-6 bg-background-dark rounded-lg p-3 border border-slate-700 flex items-center gap-3"
                        >
                            <div
                                class="w-12 h-12 rounded-full overflow-hidden border-2 border-sebg-secondary"
                            >
                                <img
                                    alt="User face with virtual glasses overlay"
                                    class="w-full h-full object-cover"
                                    data-alt="Virtual try-on simulation result"
                                    src="https://lh3.googleusercontent.com/aida-public/AB6AXuBH7ILw2CKSB5ugQdRb9eg8GBBKPmUNegQ02xCWJsApegxioAmDTuSLEVqbrzwjvazVkWEBQaSEWQw_b8cGkCcE1DxlQMxPNbinoJ6aNG70bLFnXmubbBiGEHaH9ogzGco-XLmXwghplD7Iunobar43q8-TSegqdBmTlodB7ZmKG-IXgvKmRqERdSJZRzHG37d6twcJXA8h-79rmuQfc4HYanJtKb9lK3UzvNgV6pQ19a9GNr1CDCsNfSwslkdCOBM7RE0J5gGNDR1U"
                                />
                            </div>
                            <div>
                                <p class="text-xs font-semibold text-secondary">
                                    Prueba Virtual Confirmada
                                </p>
                                <p class="text-[10px] text-slate-500">
                                    Este modelo se ajusta a tus medidas.
                                </p>
                            </div>
                           <RiCheckboxCircleFill className="text-secondary ml-auto text-lg"/>
                        </div>
                        <OrderSummaryPay client:only="react"/>
                    </div>
                    <!-- Trust Badges -->
                    <div
                        class="flex justify-center gap-4 text-slate-400 opacity-60"
                    >
                        <RiSecurePaymentFill />
                        <RiShieldCheckFill />
                        <RiCaravanFill />
                    </div>
                </div>
            </div>
        </div>
    </main>
</Layout>
